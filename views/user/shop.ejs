                        <% if (currentPage < totalPages) { %>
                            <li><a href="?page=<%= currentPage + 1 %>"><i class="fa fa-angle-right"></i></a></li>
                            <li><a href="?page=<%= totalPages %>"><i class="fa fa-angle-double-right"></i></a></li>
                        <% } %>
                    </ul>
                </div>
