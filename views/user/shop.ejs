                <!-- store products -->
                <div class="row">
                    <% let productsInRow = 0; %>
                    <% products.forEach((product) =>{ %>
                        <% if (product.stock > 0 || !hideOutOfStock) { %>
                            <% productsInRow++; %>
                            <div class="col-md-4 col-sm-6 col-xs-12 mb-4">
                                <a href="productDetails/<%=product._id%>">
                                    <div class="product">
                                        <div class="product-img">
                                            <img src="/uploads/products/<%=product.productImage[0]%>" alt="productImage">
                                            <% if (product.stock <= 0) { %>
                                                <div class="product-label">
                                                    <span class="out-of-stock">Out of Stock</span>
                                                </div>
                                            <% } else if (product.stock < 10) { %>
                                                <div class="product-label">
                                                    <span class="new">Limited Stock</span>
                                                </div>
                                            <% } %>
                                        </div>
                                        <div class="product-body">
                                            <p class="product-category"><%=product.category.name%></p>
                                            <h3 class="product-name"><a href="#"><%=product.name%></a></h3>
                                            <h4 class="product-price"><i class="fa fa-inr"></i> <%=product.salePrice%> <del class="product-old-price"><i class="fa fa-inr"></i><%=product.regularPrice%></del></h4>
                                            <div class="product-rating">
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                            </div>
                                            <div class="product-btns">
                                                <button class="add-to-wishlist" onclick="addToWishList('<%=product._id%>',this)"><i
                                                    class="fa fa-heart-o"></i><span class="tooltipp">add to wishlist</span></button>
                                            </div>
                                        </div>
                                        <!-- <div class="add-to-cart">
                                            <% if (product.stock > 0) { %>
                                                <button class="add-to-cart-btn" onclick="addToCart('<%=product._id%>', '<%=product.salePrice%>')">
                                                    <i class="fa fa-shopping-cart"></i> add to cart
