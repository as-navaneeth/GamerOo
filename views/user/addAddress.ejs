<!-- views/user/addAddress.ejs -->
<%- include("../../views/partials/user/header") %>

<!-- BREADCRUMB -->
<div id="breadcrumb" class="section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h3 class="breadcrumb-header">Add Address</h3>
                <ul class="breadcrumb-tree">
                    <li><a href="/">Home</a></li>
                    <li><a href="/manage-address">Manage Addresses</a></li>
                    <li class="active">Add Address</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- /BREADCRUMB -->

<!-- ADD ADDRESS FORM -->
<div class="section">
    <div class="container">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <h4>Add a New Address</h4>
                <form id="addressForm" action="/manageAddress/addAddress" method="POST">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <input type="hidden" name="user" value="<%= user._id %>">
                            <label for="name" class="form-label">Full Name</label>
                            <input type="text" class="form-control" id="name" name="name" required>
                        </div>
                        <div class="col-md-6">
                            <label for="phone" class="form-label">Phone Number</label>
                            <input type="tel" class="form-control" id="phone" name="phone" pattern="[0-9]{10}" title="Enter a 10-digit phone number" required>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="address" class="form-label">Address</label>
                        <textarea class="form-control" id="address" name="address" rows="3" required></textarea>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label for="city" class="form-label">City</label>
                            <input type="text" class="form-control" id="city" name="city" required>
                        </div>
                        <div class="col-md-4">
                            <label for="state" class="form-label">State</label>
                            <input type="text" class="form-control" id="state" name="state" required>
                        </div>
                        <div class="col-md-4">
                            <label for="pincode" class="form-label">Pincode</label>
                            <input type="text" class="form-control" id="pincode" name="pincode" pattern="[0-9]{6}" title="Enter a 6-digit pincode" required>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="type" class="form-label">Address Type</label>
                        <select class="form-control" id="type" name="type" required>
                            <option value="Home">Home</option>
                            <option value="Work">Work</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>

                    <div class="d-flex justify-content-end" style="margin-top: 15px;">
                        <button type="submit" class="btn btn-danger ">Save Address</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include("../../views/partials/user/footer") %>
