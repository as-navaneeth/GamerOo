<%- include("../../views/partials/user/header") %>


<style>
.cart-item {
    padding: 1rem 0;
    border-bottom: 1px solid #eee;
}

.cart-item:last-child {
    border-bottom: none;
}

.quantity-controls {
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.quantity-controls .form-control {
    width: 60px;
    text-align: center;
}

.item-total {
    font-weight: 500;
    color: #D10024;
}

.cart-item .img-fluid {
    width: 100%;
    height: 100px;
    object-fit: contain;
    border: 1px solid #eee;
    border-radius: 4px;
    padding: 5px;
}

.cart-item .col-md-2 {
    display: flex;
    align-items: center;
    justify-content: center;
}
</style>



<!-- BREADCRUMB -->
<div id="breadcrumb" class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-12">
                <ul class="breadcrumb-tree">
                    <li><a href="/">Home</a></li>
                    <li class="active">Cart Management</li>
                </ul>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /BREADCRUMB -->

<div class="section">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <h4>Shopping Cart</h4>
                        <% if (cart && cart.items.length > 0) { %>
                            <% cart.items.forEach(item => { %>
                                <div class="cart-item" data-id="<%= item._id %>">
                                    <div class="row align-items-center">
                                        <div class="col-md-2">
                                            
                                            <img src="/uploads/products/<%= item.product.productImage[0] %>" class="img-fluid">
                                        </div>
                                        <div class="col-md-4">
                                            <h5><%= item.product.name %></h5>
                                            <p class="text-muted">₹<%= item.price %></p>
                                        </div>
                                        <div class="col-md-3">
                                            <!-- <div class="quantity-controls">
                                                <button class="btn btn-sm btn-secondary decrease-qty">-</button>
                                                <input type="number" class="form-control qty-input" value="<%= item.quantity %>">
                                                <button class="btn btn-sm btn-secondary increase-qty">+</button>
                                            </div> -->
                                        </div>
                                        <div class="col-md-2">
                                            <p class="item-total">₹<%= item.price * item.quantity %></p>
                                        </div>
                                        <div class="col-md-1">
                                            <button class="btn btn-danger btn-sm remove-item" onclick="deleteCartItem('<%=item._id%>')">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        <% } else { %>
                            <div class="text-center py-5">
                                <i class="fas fa-shopping-cart fa-3x text-muted"></i>
                                <h5 class="mt-3">Your cart is empty</h5>
                                <a href="/" class="btn btn-primary mt-3">Continue Shopping</a>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h4>Order Summary</h4>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Subtotal</span>
                            <span>₹<%= cart ? cart.totalAmount : 0 %></span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-3">
                            <strong>Total</strong>
                            <strong>₹<%= cart ? cart.totalAmount : 0 %></strong>
                        </div>
                        <a href="/checkout" class="btn btn-primary w-100" style="background-color: #D10024;"  <%= !cart || cart.items.length === 0 ? 'disabled' : '' %>>
                            Proceed to Checkout
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>

function deleteCartItem(itemId){    


    Swal.fire({
        titel:"Are you sure?",
        text:"You won't be able to revert this!",
        icon:"warning",
        showCancelButton:true,
        confirmButtonColor: '#d33',
        cancelButtonColor: '#3085d6',
        confirmButtonText: 'Yes, delete it!'
        
    }).then((result) => {
        if(result.isConfirmed){
            fetch(`/cart/delete/${itemId}`,{
                method:'DELETE'
            })
            .then(response=>response.json())
            .then(data=>{
                if(data.success){
                    Swal.fire(
                        'Deleted!',
                        'Your item has beeen removed from cart',
                        'success'
                    ).then(()=>{
                        window.location.reload();
                    })
                }else{
                    Swal.fire(
                        'Error!',
                        data.message || 'Failed to delete item',
                        'error'
                    );
                }
            })
            .catch(error=>{
                console.error('Error in deleting:',error);
                Swal.fire(
                    'Error!',
                    'Something went wrong',
                    'error'
                )
            })
        }
    })
}



